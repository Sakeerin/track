APP_NAME="Parcel Tracking System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=parcel_tracking
DB_USERNAME=parcel_user
DB_PASSWORD=parcel_password

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_CONSUMER_GROUP_ID=parcel_tracking
KAFKA_EVENTS_TOPIC=tracking_events
KAFKA_NOTIFICATIONS_TOPIC=notifications

# MinIO Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=parcel-tracking

# Rate Limiting
RATE_LIMIT_PUBLIC=100
RATE_LIMIT_API=60
RATE_LIMIT_ADMIN=500
RATE_LIMIT_WEBHOOK=1000
RATE_LIMIT_BATCH=10

# Security & Data Retention
ADMIN_IP_WHITELIST=
RETENTION_AUDIT_LOG_DAYS=365
RETENTION_NOTIFICATION_LOG_DAYS=180
RETENTION_CLOSED_TICKET_DAYS=365
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# reCAPTCHA
RECAPTCHA_ENABLED=false
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_VERIFY_URL=https://www.google.com/recaptcha/api/siteverify
RECAPTCHA_SCORE_THRESHOLD=0.5
RECAPTCHA_ENFORCE_IN_TESTING=false

# External Services - SMS Gateway
SMS_API_URL=https://api.sms-provider.com/send
SMS_STATUS_URL=https://api.sms-provider.com/status
SMS_API_KEY=
SMS_SENDER_ID=TRACKING

# External Services - LINE Messaging API
LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=
LINE_API_URL=https://api.line.me/v2/bot/message/push

# External Services - Webhook Notifications
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000
WEBHOOK_SECRET=

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
